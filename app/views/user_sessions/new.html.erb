<% @background_recipe = Recipe.random_background_image %>

<div id="session-login" class='gray-background'>
	<div class='gray-background'>
  <h1>Login</h1>

  <%= form_for @user_session, :url => '/user_session' do |f| %>
    <%= f.error_messages %>
    <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, :size => 30 %></p>
    
    <%= f.label :password %> (<%= link_to('Forgot password?', '/user_sessions/forgot_password', :class =>'forgot-password') %>)
    <%= f.password_field :password, :size => 30 %>
    <br>
    <%= f.check_box :remember_me %><%= f.label :remember_me %>
    <br><br>
    
    <p><%= f.submit "Login", :class => "gray-button" %></p>
    
    (<%= link_to('No Account? Sign up here.', '/home/sign_up')%>)
    
  <% end %>
  </div>
</div>