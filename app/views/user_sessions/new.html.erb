<% @background_recipe = Recipe.random_background_image %>

<div id="session-login" class='gray-background'>
  <h1>Login</h1>

  <%= form_for @user_session, :url => '/user_session' do |f| %>
    <%= f.error_messages %>
    <p>
    <%= f.label :email %><br>
    <%= f.text_field :email, :size => 30 %></p>
    
    <p>
    <%= f.label :password %><br>
    <%= f.password_field :password, :size => 30 %></p>
    
    <p><%= f.check_box :remember_me %><%= f.label :remember_me %></p>
    
    <p><%= f.submit "Login", :class => "gray-button" %></p>
    
    <br>
    (<%= link_to('Forgot password?', '/user_sessions/forgot_password')%>)
    
  <% end %>
</div>