

<table id="learn-table">
	<tr>
		<!--title banners -->
		<td class="learn-first-column"><img src="images/banner_techniques_left.png"></td>
		<td><img src="images/banner_ingredients_right.png"></td>
	</tr>
	<tr>
		<!-- Techniques -->
		<td class="learn-first-column">
			<% @techniques.each do |technique|%>
				<% video_link = technique.video_link.to_s + "&amp;" + "showinfo=1"  %>
				<iframe class="learn-video" src="<%= video_link %>" frameborder="0" allowfullscreen></iframe>
				<br>
			<% end %>
		</td>
		<!-- Ingredients -->
		<td>
			<% @ingredients.each do |ingredient|%>
				<iframe class="learn-video" src="<%= ingredient.video_link %>" frameborder="0" allowfullscreen></iframe>
				<br>
			<% end %>
		</td>
	</tr>
	
</table>
