<ul id="sortable-list">
	<!-- for loop to show items -->
  <% categories_list.each do |cat, item_arr| %>
    <li class="shop-category">
      <span>
        <%= cat.capitalize %>
      </span>
    </li>
      <% item_arr.each do |item| %>
		    <%= render partial: 'shop_item', locals: {item: item, action_shop: action_shop, mobile_request: mobile_request} %>
    	<% end %>
  <% end %>

</ul>
